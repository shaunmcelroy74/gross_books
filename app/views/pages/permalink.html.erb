<%# app/views/pages/permalink.html.erb %>
<% content_for(:html_title) { @page.title } %>

<h1 class="title is-2"><%= @page.title %></h1>
<p><%= @page.content %></p>

<div>
  <%= link_to "Edit this page", edit_page_path(@page) %> |
  <%= link_to "Back to pages", pages_path %>

  <%= button_to "Destroy this page", page_path(@page), method: :delete, data: { confirm: "Are you sure?" } %>
</div>