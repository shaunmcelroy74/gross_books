<h1 class="title is-2">Publishers</h1>

<% sorted_publishers = @publishers.sort_by { |publisher| -publisher.books.count } %>
<ol class="ml-5">
  <% sorted_publishers.each do |publisher| %>
    <li>
      <%= publisher.publisher_name %> printed <%= publisher.books.count %> books in the list
    </li>
  <% end %>
</ol>